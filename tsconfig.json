{
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "dist",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "esnext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
